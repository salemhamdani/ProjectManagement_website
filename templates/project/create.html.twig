{% extends 'base.html.twig' %}
{% block title %}
    {% if editMode %} Update {% else %} Create  {% endif %}
    {{ title }}
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="/assets/js/plugins/visualization/echarts/echarts.min.js"></script>
    <script src="/assets/js/demo_pages/charts/echarts/pies_donuts.js"></script>
{% endblock %}
{% block body %}
    <br><br><br>
    <div class="content">
        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form,{'attr': {'class':'form-validate-jquery', 'novalidate': 'novalidate'}}) }}

                <div class="card">
                    <div class="card-body">
                        <fieldset class="mb-3">
                            <legend class="text-uppercase font-size-l font-weight-bold">{% if editMode %} Update {% else %} Create  {% endif %} {{ title }}
                            </legend>
                            {{ form_rest(form) }}
                            <button type="submit" class="btn btn-secondary"
                                    style="float:right;">{% if editMode %} Save {% else %} Create ! {% endif %}<i
                                        class="icon-checkmark3 font-size-base mr-1"></i></button>
                        </fieldset>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
            {% if  editMode %}
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header header-elements-inline">
                            <h5 class="card-title">Basic pie chart</h5>
                            <div class="header-elements">
                                <div class="list-icons">
                                    <a class="list-icons-item" data-action="collapse"></a>
                                    <a class="list-icons-item" data-action="reload"></a>
                                    <a class="list-icons-item" data-action="remove"></a>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="chart-container">
                                <div class="chart has-fixed-height" id="pie_basic"></div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    {% if editMode %}
        <div class="content">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">BudgetLines Percentage :</h5>
                </div>
                <div class="card-body">
                    {% for budget in projectBudgets %}
                        <h4>{{ budget.name }}</h4>
                        <h6>{{ budget.percentage }}</h6>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="content">
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Operations :</h5>
                </div>
                <div class="card-body">
                    <a href={{ path('createOperation',{'id':project.id}) }}>
                        <button type="submit" class="btn btn-secondary" style="float:left;"> Add Operation</button>
                    </a>
                </div>
                <table class="table datatable-html">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Activity</th>
                        <th>BudgetLine</th>
                        <th> Consulter</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for operation in operations %}
                        <tr>
                            <td>{{ operation.name }}</td>
                            <td> {{ operation.date|date('d-m-Y h-m-s') }}</td>
                            <td>{{ operation.price }}</td>
                            <td>{{ operation.description }}</td>
                            <td>{{ operation.activity }}</td>
                            <td>{{ operation.budgetLine }}</td>
                            <td>
                                <button type="button" class="btn btn-secondary" data-toggle="modal"
                                        data-target="#{{ operation.id }}">Consult <i class="icon-play3 ml-2"></i>
                                </button>
                            </td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('updateOperation', {'id': operation.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="grey"
                                         class="bi bi-clipboard-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                                    </svg>
                                </a>
                            </td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('deleteOperation', {'id': operation.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                         class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </a>
                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {% for operation in operations %}
                    <!-- Horizontal form modal -->
                    <div id="{{ operation.id }}" class="modal fade" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"> {{ operation.name }}</h5>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <form action="#" class="form-horizontal" onsubmit="return false;">
                                    <div class="modal-body">
                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3">Name :</label>
                                            <div class="col-sm-9">
                                                <input type="text" placeholder="{{ operation.name }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3">Date :</label>
                                            <div class="col-sm-9">
                                                <input type="text"
                                                       placeholder="{{ operation.date|date('d-m-Y h-m-s') }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3">Price :</label>
                                            <div class="col-sm-9">
                                                <input type="text" placeholder="{{ operation.price }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3"> Description :</label>
                                            <div class="col-sm-9">
                                                <input type="text" placeholder="{{ operation.description }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3">Activity :</label>
                                            <div class="col-sm-9">
                                                <input type="text" placeholder="{{ operation.activity }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-form-label col-sm-3">Budget Line :</label>
                                            <div class="col-sm-9">
                                                <input type="text" placeholder="{{ operation.budgetLine }}"
                                                       class="form-control" disabled>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                                        <a href="{{ path('updateOperation', {'id': operation.id }) }}"> Update </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /horizontal form modal -->
                {% endfor %}
            </div>
        </div>
        <div class="content">

            <!-- HTML sourced data -->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">BudgetLines :</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload" href="{{ path('budgetLines') }}"></a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <a href="{{ path("createBudgetLine",{'id':project.id }) }}">
                        <button type="submit" class="btn btn-secondary" style="float:left;"> Add BudgetLine</button>
                    </a>
                </div>

                <table class="table datatable-html">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Percentage</th>
                        <th>Project</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for budgetLine in budgetLines %}
                        <tr>
                            <td>{{ budgetLine.name }}</td>
                            <td> {{ budgetLine.percentage }}</td>
                            <td>{{ budgetLine.project }}</td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('updateBudgetLine', {'id': budgetLine.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="grey"
                                         class="bi bi-clipboard-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                                    </svg>
                                </a>
                            </td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('deleteBudgetLine', {'id':budgetLine.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                         class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </a>
                            </td>
                         </tr>


                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="content">

            <!-- HTML sourced data -->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Activities :</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload" href="{{ path('activities') }}"></a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <a href="{{ path("createActivity", {'id': project.id}) }}">
                        <button type="submit" class="btn btn-secondary" style="float:left;"> Add Activity</button>
                    </a>
                </div>

                <table class="table datatable-html">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Project</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for activity in activities %}
                        <tr>
                            <td>{{ activity.name }}</td>
                            <td>{{ activity.project }}</td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('updateActivity', {'id': activity.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="grey"
                                         class="bi bi-clipboard-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                                    </svg>
                                </a>
                            </td>
                            <td>
                                &ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;
                                <a href={{ path('deleteActivity', {'id': activity.id }) }}>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red"
                                         class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                </a>
                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

{% endblock %}