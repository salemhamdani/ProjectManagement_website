{% extends 'base.html.twig' %}
{% block title  %}
    PaymentTranche
{% endblock %}
{% block body %}
    <!-- Content area -->
    <div class="content">

        <!-- HTML sourced data -->
        <div class="card">
            <div class="card-header header-elements-inline">
                <h5 class="card-title">PaymentTranches Table</h5>
                <div class="header-elements">
                    <div class="list-icons">
                        <a class="list-icons-item" data-action="collapse"></a>
                        <a class="list-icons-item" data-action="reload" href="{{ path('paymentTranches') }}"></a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <a href="{{ path("createPaymentTranche") }}"> <button type="submit" class="btn btn-secondary" style="float:left;"> Add Payment Tranche </button></a>
            </div>

            <table class="table datatable-html">
                <thead>
                <tr>
                    <th>Value</th>
                    <th>Operation</th>
                    <th>Payment Type</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for paymentTranche in paymentTranches %}
                    <tr>
                        <td>{{ paymentTranche.value }}</td>
                        <td> {{paymentTranche.operation }}</td>
                        <td> {{paymentTranche.paymentType }}</td>
                        <td>

                            <a href={{ path('updatePaymentTranche', {'id': paymentTranche.id }) }}>
                                <button type="button" class="btn bg-brown-300" >update </button>
                            </a>
                        </td>
                        <td>

                            <button type="button" class="btn bg-danger" data-toggle="modal" data-target="#{{ paymentTranche.id }}">
                                Delete
                            </button>
                        </td>

                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    {% for paymentTranche in paymentTranches %}
        <!-- Danger modal -->
        <div id="{{ paymentTranche.id }}" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <h6 class="modal-title">Confirm Deletion</h6>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        <h6 class="font-weight-semibold">Do you want to delete this payment tranche  ?</h6>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                        <a href={{ path('deletePaymentTranche', {'id': paymentTranche.id }) }}>
                            <button type="button" class="btn bg-danger">Delete</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

