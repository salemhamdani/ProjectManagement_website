{% extends 'base.html.twig' %}
{% block title %}
    {% if editMode %} Update {% else %} Create  {% endif %}
    {{ title }}
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="/assets/js/plugins/visualization/echarts/echarts.min.js"></script>
    <script src="/assets/js/demo_pages/charts/echarts/pies_donuts.js"></script>
{% endblock %}
{% block body %}
    <br><br><br>
    <div class="content">
        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form,{'attr': {'class':'form-validate-jquery'}}) }}

                <div class="card">
                    <div class="card-body">
                        <fieldset class="mb-3">
                            <legend class="text-uppercase font-size-l font-weight-bold">
                                {% if editMode %} Update {{ title }} {% else %} Create {{ title }} {% if title == 'Activity' %} for {{ proj_name }} {% endif %}
                                {% endif %}
                            </legend>
                            {{ form_rest(form) }}
                            <button type="submit" class="btn btn-secondary"
                                    style="float:right;">{% if editMode %} Save {% else %} Create ! {% endif %}
                                <i class="icon-checkmark3 font-size-base mr-1"></i></button>
                        </fieldset>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}